@model List<Edukator.EntityLayer.Concrete.Map>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Harita</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Konum URL</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.MapID</th>
                        <td><a href="@item.LocationURL" target="_blank">Konum Linki</a> </td>
                        <td><a href="/Maps/DeleteMap/@item.MapID" class="btn btn-outline-danger"><i class="fa fa-trash "></i>Sil</a></td>
                        <td><a href="/Maps/UpdateMap/@item.MapID" class="btn btn-outline-success"><i class="fa fa-pencil-alt "></i>Güncelle</a></td>



                    </tr>
                }
            </tbody>
        </table>
        <a href="/Maps/AddMap" class="btn btn-primary">Yeni Harita Girişi</a>
    </div>
</div>
