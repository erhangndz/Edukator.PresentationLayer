@model Edukator.EntityLayer.Concrete.Map
@{
    ViewData["Title"] = "UpdateMap";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4 col-xl-12">
    <h6 class="mb-4"> Harita Güncelleme Sayfası</h6>
    <form method="post">
        <div class="mb-3">
           <input type="hidden" asp-for="MapID" />
            <label for="location" class="form-label">Konum URL</label>
            <input type="text" class="form-control" id="location" asp-for="LocationURL" />
        </div>



        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>

