@model Edukator.EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4 col-xl-12">
    <h6 class="mb-4">Sosyal Medya Güncelleme Sayfası</h6>
    <form method="post">
        <input type="hidden" asp-for="SocialMediaID" />
        <div class="mb-3">
            <label for="Socialmedianame" class="form-label">Sosyal Medya Başlığı</label>
            <input type="text" class="form-control" id="Socialmedianame" asp-for="SocialMediaName" />
        </div>
        <div class="mb-3">
            <label for="socialmediaicon" class="form-label">Sosyal Medya İkonu</label>
            <input type="text" class="form-control" id="socialmediaicon" asp-for="SocialMediaIcon" />
        </div>
        <div class="mb-3">
            <label for="socialmediaurl" class="form-label">Sosyal Medya URL</label>
            <input type="text" class="form-control" id="socialmediaurl" asp-for="SocialMediaURL" />
        </div>


        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>
