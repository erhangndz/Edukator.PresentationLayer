@model List<Edukator.EntityLayer.Concrete.Category>

@{
    Layout = null;
}
<h2 class="card-header">Kategori Listesi</h2>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
</div>
