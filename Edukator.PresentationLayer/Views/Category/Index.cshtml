@model List<Edukator.EntityLayer.Concrete.Category>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategoriler</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Kurslar</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.CategoryID</th>
                        <td>@item.CategoryName</td>
                        <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger"><i class="fa fa-trash me-2"></i>Sil</a></td>
                        <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success"><i class="fa fa-pencil-alt me-2"></i>Güncelle</a></td>
                        <td><a href="/Category/GetCourse/@item.CategoryID" class="btn btn-outline-info"><i class="fa fa-chalkboard me-2"></i>Kurslar</a></td>
                      

                    </tr>
                }
            </tbody>
        </table>
        <a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Girişi</a>
    </div>
</div>
