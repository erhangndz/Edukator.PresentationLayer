@model List<Edukator.EntityLayer.Concrete.Subscriber>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Aboneler</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.SubscriberID</th>
                        <td>@item.Mail</td>
                        <td><a href="/Subscriber/DeleteSubscriber/@item.SubscriberID" class="btn btn-outline-danger"><i class="fa fa-trash me-2"></i>Sil</a></td>
                        <td><a href="/Subscriber/UpdateSubscriber/@item.SubscriberID" class="btn btn-outline-success"><i class="fa fa-pencil-alt me-2"></i>Güncelle</a></td>



                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>


