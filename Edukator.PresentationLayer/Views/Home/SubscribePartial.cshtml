@model Edukator.EntityLayer.Concrete.Subscriber
<section class="w3l-project" id="subscribe">
    <div class="container-fluid mx-lg-0">
        <div class="row">
            <div class="col-lg-6 bottom-info">
                <div class="project-header-section text-left">
                    <h5 class="title-subw3hny text-left mb-1">Bize Katılın</h5>
                    <h3 class="title-w3l">
                        Ücretsiz bir şekilde mailinizle kaydolarak gelişmelerden <span class="inn-text"> haberdar olun!</span>
                    </h3>
                    <p class="mt-3 pr-lg-5">Abone olun ve en son gelişmelerden ve tekliflerden ilk sizin haberiniz olsun!</p>

                    <form asp-action="SubscribePartial" asp-controller="Home" class="subscribe mt-5" method="post">
                        <input type="email" asp-for="Mail" placeholder="E-Mail Adresiniz" required="">
                        <button type="submit" class="btn btn-style btn-primary">Abone Ol</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 subcribe-img">
            </div>
        </div>
    </div>
</section>