@model Edukator.EntityLayer.Concrete.Course
@{
    ViewData["Title"] = "UpdateCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="bg-light rounded h-100 p-4 col-xl-12">
    <h6 class="mb-4">Kurs Güncelleme Sayfası</h6>
    <form method="post">
        <div class="mb-3">
            <input type="hidden" class="form-control"  asp-for="CourseID" />
            <label for="coursetitle" class="form-label">Kurs Adı</label>
            <input type="text" class="form-control" id="coursetitle" asp-for="Title" />
        </div>

        <div class="mb-3">
            <label for="imageurl" class="form-label">Resim URL</label>
            <input type="text" class="form-control" id="imageurl" asp-for="ImageURL" />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Fiyat</label>
            <input type="text" class="form-control" id="price" asp-for="Price" />
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">İnceleme Puanı</label>
            <input type="text" class="form-control" id="review" asp-for="Review" />
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Kategorisi</label>
            @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Açıklama</label>
            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>