@model Edukator.EntityLayer.Concrete.Course
@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="bg-light rounded h-100 p-4 col-xl-12">
    <h6 class="mb-4">Yeni Kurs Girişi</h6>
    <form method="post">
        <div class="mb-3">
            <label for="coursetitle" class="form-label">Kurs Adı</label>
            <input type="text" class="form-control" id="coursetitle" asp-for="Title" />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Fiyatı</label>
            <input type="text" class="form-control" id="price" asp-for="Price" />
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Kategorisi</label>
            <input type="text" class="form-control" id="category" asp-for="CategoryID" />
        </div>
    


        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
