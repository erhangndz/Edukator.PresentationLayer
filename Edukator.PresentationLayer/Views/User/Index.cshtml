@model List<Edukator.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Öğrenciler</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Şehir</th>
                  
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.City </td>
                   
                        <td><a href="/User/DeleteUser/@item.Id" class="btn btn-outline-danger"><i class="fa fa-trash me-2"></i>Sil</a></td>
                        <td><a href="/User/UpdateUser/@item.Id" class="btn btn-outline-success"><i class="fa fa-pencil-alt me-2"></i>Güncelle</a></td>


                    </tr>
                }
            </tbody>
        </table>
       
    </div>
</div>


